{
  "name": "agentfleet",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "types"
  ],
  "scripts": {
    "dev": "npm run build:types && concurrently \"npm run dev:types\" \"npm run dev:server\" \"npm run dev:ui\"",
    "dev:types": "npm run dev --workspace=@agentfleet/types",
    "dev:ui": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "build": "npm run build:types && npm run build:client && npm run build:server",
    "build:types": "npm run build --workspace=@agentfleet/types",
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "start": "npm run start --workspace=server",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "latest",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript-eslint": "latest"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "importOrderSeparation": false,
    "importOrderSortSpecifiers": true,
    "organizeImportsSkipDestructiveCodeActions": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-organize-imports"
    ]
  }
}
